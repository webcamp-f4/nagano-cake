<div class="row">
  <div class= "col-auto">
    <h4>新規会員登録</h4>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <table class="table">
        <tr>
          <th>名前</th>
          <td>（姓）<%= f.text_field :last_name_kanji, autofocus: true, autocomplete: "last_name_kana" %>
              （名）<%= f.text_field :first_name_kanji, autofocus: true, autocomplete: "first_name_kana" %>
          </td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td>（セイ) <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kanji" %>
               (メイ) <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kanji" %>
          </td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <th>郵便番号（ハイフンなし）</th>
          <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
        </tr>
        <tr>
          <th>電話番号（ハイフンなし）</th>
          <td><%= f.text_field :tel, autofocus: true, autocomplete: "tel" %></td>
        </tr>
        <tr>
          <th>パスワード（6文字以上）</th>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <th>パスワード（確認用）</th>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
      </table>

      <div class="text-center">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    <% end %>

    <h4>即に登録済みの方</h4>
    <%= render "devise/shared/links" %>

  </div>
</div>
