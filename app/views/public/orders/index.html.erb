  <div class="row">
    <div class="">
      <h2 class="red-border px-3">注文履歴一覧</h2>
    </div>
  </div>

  <div class="row mt-3">
      <table class="table">
        <thead>
          <tr class="red-border">
            <th>注文日</th>
            <th>配送先</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr class="border">
              <td><%= order.created_at.strftime("%Y-%m-%d %H:%M") %></td>

              <% if order.shipping_address.length < 8 %>
                <% ship_address = Shipping.find(order.shipping_address) %>
              <td class="align-middle">
                <%= ship_address.postal_code + "  " + ship_address.address + "  " + ship_address.name %>
              </td>

              <% else %>
                <td class="align-middle"><%= order.shipping_address %></td>
              <% end %>

              <td class="align-middle">
                <%= order.total_due %>
              </td>

              <td class="align-middle">
                <%= order.status %>
              </td>
              <td class="align-middle"><%=link_to "表示する", public_order_path(order.id), class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>

      </table>
  </div>
</div>
