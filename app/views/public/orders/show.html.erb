  <div class="row">
      <h2 class="red-border px-3">注文履歴詳細</h2>
  </div>

  <div class="row mt-5">
    <div class="offset-1 col-4">

      <div class="row">
        <strong class="red-border px-3">注文情報</strong>
      </div>

      <div class="row mt-3">
        <table class="table table-borderless offset-1">
          <tbody>
            <tr class="brown-border">
              <td>注文日</td>
              <td><%= @order.created_at.strftime("%Y-%m-%d %H:%M") %></td>
            </tr>

            <tr class="brown-border">
              <td>配送先</td>
              <td>
                  <%= @order.shipping_postal_code %>
                  <%= @order.shipping_address %>
                  <%= @order.shipping_name %>
              <td>
            </tr>

            <tr class="brown-border">
              <td>支払い方法</td>
              <td><%= @order.pay_method %></td>
            </tr>

            <tr class="brown-border">
              <td>ステータス</td>
              <td><%= @order.status %></td>
            </tr>
          </tbody>
        </table>
      </div>

    </div>

    <div class="offset-1 col-4">
      <div class="row">
        <strong class="red-border px-3">請求情報</strong>
      </div>

      <div class="row mt-3">
        <table class="table table-borderless offset-1">
          <tbody>
            <tr class="brown-border">
              <td>商品合計</td>
              <td><%= @order.total_due  %></td>
            </tr>

            <tr class="brown-border">
              <td>配送料</td>
              <td><%= @order.postage %></td>
            </tr>

            <tr class="brown-border">
              <td>ご請求額</td>
              <td><%= @order.total_due.to_i + @order.postage.to_i %></td>
            </tr>
          </tbody>
        </table>
      </div>

    </div>
  </div>

  <div class="row mt-5">
    <div class="offset-1">
      <strong class="red-border px-3">注文内容</strong>
    </div>
  </div>

  <div class="row mt-3">
    <div class="offset-1 col-9">

      <table class="table table-borderless">
        <thead>
          <tr class="red-border">
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>

        <% @order_items.each do |d| %>
        <tbody>
          <tr class="brown-border">
            <td><%= d.item_id %></td>
            <td><%= (d.price * 1.1).floor %></td>
            <td><%= d.amount %></td>
            <td><%= ((d.price * d.amout) * 1.1).floor %></tr>
        </tbody>
        <% end %>
      </table>

    </div>
  </div>

</div>
