<div class="row">
        <div class="">
          <h2 class="red-border px-3">注文履歴詳細</h2>
        </div>

<div class="col-md-12">
          <strong class="">注文情報</strong>
            <table class="table">
             <tbody>
                <tr class="brown-border">
                  <td>注文日</td>
                  <td><%= @order.created_at.strftime("%Y-%m-%d %H:%M") %></td>
                </tr>
                <tr class="brown-border">
                  <td>配送先</td>
                    <% if @order.shipping_address.length <8 %>
                    <% ship_address = Shipping.find(@order.shipping_address) %>
                  <td>
                    <%= ship_address.shipping_postal_code %>
                    <%= ship_address.shipping_address %>
                    <%= ship_address.shipping_name %>
                    <% end %>
                  <td>
                </tr>
                <tr class="brown-border">
                  <td>支払い方法</td>
                  <td><%= @order.pay_method %></td>
                </tr>
                <tr class="brown-border">
                  <td>ステータス</td>
                  <td><%= @order.status %></td>
                </tr>
            </tbody>
          </table>

          <strong class="red-border px-3">注文内容</strong>
              <table class="table">
                <thead>
                  <tr class="red-border">
                    <th>商品</th>
                    <th>単価(税込)</th>
                    <th>個数</th>
                    <th>小計</th>
                  </tr>
                </thead>
                  <% @order_items.each do |d| %>
                    <tbody>
                      <tr class="brown-border">
                        <td><%= d.items.name %></td>
                        <td><%= (d.price * 1.1).floor %></td>
                        <td><%= d.amount %></td>
                        <td><%= ((d.price * d.amount) * 1.1).floor %>
                      </tr>
                    </tbody>
                  <% end %>
              </table>

            <strong class="red-border px-3">請求情報</strong>
              <table class="table table-borderless offset-1">
                <tbody>
                  <tr class="brown-border">
                    <td>商品合計</td>
                    <td><%= @order.total_due  %></td>
                  </tr>
                  <tr class="brown-border">
                    <td>配送料</td>
                    <td><%= @order.postage %></td>
                  </tr>
                  <tr class="brown-border">
                    <td>ご請求額</td>
                    <td><%= @order.total_due.to_i + @order.postage.to_i %></td>
                  </tr>
                </tbody>
              </table>

  </div>
</div>
