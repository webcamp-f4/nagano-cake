<h2>注文情報確認</h2>

<div class="row">
	<div class = "col-xs-9">
		<!--注文商品の情報-->
		<table class="table table-bordered">
			<thead class="thead-light">
				<tr>
					<th>商品名</th>
					<th>単価（税込）</th>
					<th>数量</th>
					<th>小計</th>
				</tr>
			</thead>
			<tbody>
				<tr>
				</tr>
				<% current_customer.cart_items.each do |cart_item| %>
					<tr>
						<td>
							<%= attachment_image_tag cart_item.item, :image, size: "200x150", format: 'jpeg', fallback: "img/no-image-mini.jpg" %>
							<%= cart_item.item.name %>
						</td>
						<td><%= (cart_item.item.price.to_i * 1.1).floor %></td>
						<td><%= cart_item.amount %></td>
						<td><%= (cart_item.item.price.to_i * 1.1).floor * cart_item.amount %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>

	<div class = "col-xs-3">
		<!--金額の情報-->
		<table class="table table-bordered">
			<tr>
		    	<th>送料</th>
		    	<td>800</td>
		    </tr>
		    <tr>
		    	<th>商品合計</th>
		    	<td><%= @total_price %></td>
		    </tr>
		    <tr>
		    	<th>請求金額</th>
		    	<td><%= @total_price + 800 %></td>
		    </tr>
		</table>
	</div>
</div>

<div class="row">
	<div class = "col-md-9">
		<table class="table table-bordered">
			<tr>
				<th><strong>お支払い方法</strong></th>
				<td><%= session[:pay_method] %></td>
			</tr>
			<tr>
				<th><strong>お届け先</strong></th>
				<td>
					<!-- うけとった文字列が8けたより少なければ -->
						
					<!-- 受け取った文字列がそれ以外なら -->
						<%= session[:address] %>
				</td>
			</tr>
		</table>
        <div class="text-center">
		<%= link_to "購入を確定する", public_create_order_path, class: "btn btn-success" %>
	</div>
	
</div>
</div>