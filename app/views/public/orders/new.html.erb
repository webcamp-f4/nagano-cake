<h4>注文情報入力</h4>

<%= form_with url:public_orders_path, method: :post do |f| %>

	<h4>支払い方法</h4>
	<% Order.pay_methods.each do |pay_method| %>
		<%= f.radio_button :pay_method, pay_method[0] %>
		<%= f.label ("#{pay_method[0]}") %>
	<% end %>

	<h4>お届け先</h4>

	<%= select_tag :select_address, options_for_select([["ご自身の住所","my_address"],["登録済み住所から選択","registered_address"],["新しいお届け先","new_address"]]) %>

	<div class="field">
		<%= f.label "郵便番号（ハイフンなし）" %>
		<%= f.text_field :shipping_name %>
	</div>

	<div class="field">
		<%= f.label "住所" %>
		<%= f.text_field :shipping_postal_code %>
	</div>

	<div class="field">
		<%= f.label "宛名" %>
		<%= f.text_field :shipping_address %>
	</div>

	<div class="actions">
		<%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
	</div>

<% end %>

