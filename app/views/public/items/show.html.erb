<div class="row">
<div class= "col-md-3">
	<%= render 'sidebar', genres: @genres %>
</div>

<div class="col-md-9">
  <div class="row">
    <div class="col-md-6">
      <%= attachment_image_tag(@item, :image,fallback: "img/no-image-mini.jpg",size:"400x250") %>
    </div>
    <div class="col-md-6">
    	<h3><%= @item.name %></h3><br>
    	<p><%= @item.introduction %></p><br>
    	<strong>¥<%= (@item.price.to_i * 1.1).floor %>（税込）</strong>
    </div>
  </div>


<% if customer_signed_in? %>
  <div class="row">
    <div class="col-auto text-right">
      <%= form_for [:public, @cart_item] do |f| %>
        <%= f.number_field :amount, min:1, placeholder: "個数選択" %>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <%= f.submit "カートに入れる", class: "btn btn-primary" %>
  　　<% end %>
      <div style="color: red;"><%= flash[:into_cart_error] %></div>
     <% end %>
    </div>
  </div>
</div>
