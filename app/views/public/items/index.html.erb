<div class= "col-xs-3">
	<%= render 'layouts/sidebar' %>
</div>

<div class="row">
	    	<% @items.each do |item| %>
          <div class="col-3 mt-3"> <!--ひとつのブロックをラップしてカラムを指定する-->
		        <%= link_to public_item_path(item) do %><!--それをeach文で回す-->
		          <%= attachment_image_tag item, :image, size: "150x150", format: 'jpeg', fallback: "img/no-image-mini.jpg", class: 'rounded' %>
		        <% end %><br>
		        <span class="text-muted"><%= link_to item.name, public_items_path(item.genre_id) %></span><br>
		        <strong class="red-border"><%= item.name %></strong><br>
		        <span class="ml-auto"><%= (item.price.to_i * 1.1).floor%>円</span><br>
          </div>
        <% end %>
	    </div>
