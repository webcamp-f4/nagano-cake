<div class = "row">
	<div class="col-md-4 mr-auto">
		<h2>ショッピングカート</h2>
	</div>

	<div class="text-right">
		<%=link_to "カートを空にする", public_cart_items_destroy_all_path,　method: :delete, class: "btn btn-danger" %>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<table class="table table-bordered">
			<thead class="thead-light">
				<tr>
					<th>商品名</th>
					<th>単価（税込）</th>
					<th>数量</th>
					<th>小計</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @cart_items.each do |cart_item| %>
					<tr>
						<td>
							<%= attachment_image_tag cart_item.item, :image, size: "50x50", fallback: "img/no-image-mini.jpg" %>
							<%= cart_item.item.name %>
						</td>
						<td><%= (cart_item.item.price.to_i * 1.1).floor %></td>
						<td>
				            <%= form_for [:public, cart_item] do |f| %>

				              <%= f.number_field :amount, min:1 %>
				              <%= f.submit "変更", class: "btn btn-primary" %>
							<% end %>
		        		</td>
						<td><%= (cart_item.item.price.to_i * 1.1).floor * cart_item.amount %></td>
						<td>
							<%=link_to "削除する", public_cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

<div class="row">
		<div class="col-md-4">
			<%=link_to "買い物を続ける", public_items_path, class: "btn btn-primary" %>
		</div>
		<div class="col-md-4 col-md-offset-4">
			<table class="table table-bordered thead-light">
				<tr>
			    	<th>合計金額</th>
			    	<td><%= @total_price %></td>
			    </tr>
			</table>
		</div>
		<div class="text-center">
			<% if @cart_items != [] %>
				<%=link_to "情報入力に進む", new_public_order_path, class: "btn btn-success" %>
			<% end %>
		</div>
</div>