<h2>ショッピングカート</h2>
<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th>商品名</th>
			<th>単価（税込）</th>
			<th>数量</th>
			<th>小計</th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @cart_items.each do |cart_item| %>
			<tr>
				<td><%= current_customer.cart_item.items.name %></td>
				<td><%= current_customer.cart_item.items.price %></td>
				<td>
		            <%= form_for (@cart_item) do |f| %>
		              <%= f.text_field :amount %>
		              <%= f.submit "変更", class: "btn btn-primary" %>
					<% end %>
        		</td>
				<td></td>
				<td>
					<%=link_to "削除する", public_cart_item_path, method: :delete, class: "btn btn-danger" %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<table class="table table-hover table-inverse">
	<tr>
    	<th>合計金額</th>
    	<td></td>
    </tr>
</table>

<%=link_to "カートを空にする", public_cart_items_destroy_all_path,　method: :delete, class: "btn btn-danger" %>
<%=link_to "買い物を続ける", public_items_path, class: "btn btn-primary" %>
<%=link_to "情報入力に進む", new_public_order_path, class: "btn btn-success" %>