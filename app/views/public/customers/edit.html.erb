<h1>登録情報編集</h1>

<%= form_for(@customer) do |f| %>

<table>
    <tr>
      <th>名前</th>
      <td>（姓）</td>
      <td><%= f.text_field :last_name_kanji %></td>
      <td>(名)</td>
      <td><%= f.text_field :first_name_kanji %></td>
    </tr>
    <tr>
      <th>カナ</th>
      <td>(セイ）</td>
      <td><%= f.text_field :last_name_kana %></td>
      <td>(メイ)</td>
      <%= f.text_field :first_name_kana %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td></td>
      <td><%= f.text_area :email %></td>
    </tr>
    <tr>
      <th>郵便番号(ハイフンなし)</th>
      <td></td>
      <td><%= f.number_field :postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td></td>
      <td><%= f.text_area :address %></td>
    </tr>
    <tr>
      <th>電話番号(ハイフンなし)</th>
      <td></td>
      <td><%= f.number_field :tel %></td>
    </tr>
    <tr>
      <%= f.submit '編集内容を保存する'%>
    </tr>
</table>
<% end %>
