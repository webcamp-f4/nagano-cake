<div class="row">
  <h1>マイページ</h1>
  <div class="col-md-2"></div>
      <div class="col-md-8">
        <div class="text-center">
        </div>

      <div class="">
        <h2>登録情報</h2>
        <h4 class="text-center">
            <%= link_to "編集する",edit_public_customer_path(@customer), class: "btn btn-primary" %>
            <%= link_to "パスワードを変更する", edit_public_customer_path(@customer), class: "btn btn-danger" %>
        </h4>
        <br>
      </div>

      <div class="row">
      <table class="table table-hover table-inverse">
          <tr>
              <td>氏名:</td>
              <td>
                 <%= @customer.last_name_kanji %>
                 <%= @customer.first_name_kanji %>
              </td>
          </tr>
          <tr>
              <td>カナ:</td>
              <td>
                <%= @customer.last_name_kana %>
                <%= @customer.first_name_kana %>
              </td>
          </tr>
          <tr>
              <td>郵便番号:</td>
              <td>
                <%= @customer.postal_code %>
              </td>
          </tr>
          <tr>
              <td>住所:</td>
              <td>
                <%= @customer.address %>
              </td>
          </tr>
          <tr>
              <td>電話番号:</td>
              <td>
                <%= @customer.tel %>
              </td>
          </tr>
          <tr>
              <td>メールアドレス:</td>
              <td>
                <%= @customer.email %>
              </td>
          </tr>
        </table>
      </div>

        <div class="text-center">
          <%= link_to "配送先一覧を見る", public_shippings_path(current_customer), class: "btn btn-success" %>

          <%= link_to "注文履歴一覧を見る", public_orders_path, class: "btn btn-success" %>
        </div>

    <div class="col-md-2"></div>
</div>

