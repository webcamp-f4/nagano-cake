<span>注文履歴一覧</span>
<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th>購入日時</th>
			<th>購入者</th>
			<th>注文個数</th>
			<th>注文ステータス</th>
		</tr>
	</thead>
	<tbody>
		<% @orders.each do |order| %>
		<tr>
			<td>
				<%= order.created_at %>
			</td>
			<td>
				<%= order.customer.last_name_kanji %>
				<%= order.customer.first_name_kanji %>
			</td>
			<td>
				<%= %>
			</td>
			<td>
				<%= order.status %>
			</td>
		</tr>
		<% end %>
		<%= paginate @orders %>
	</tbody>
</table>