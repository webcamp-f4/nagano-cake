<span>注文履歴一覧</span>
<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th>購入日時</th>
			<th>購入者</th>
			<th>注文個数</th>
			<th>注文ステータス</th>
		</tr>
	</thead>
	<tbody>
		<% @orders.each do |order| %>
		<tr>
			<td>
				<%= order.created_at.strftime("%Y-%m-%d %H:%M") %>
			</td>
			<td>
				<%= order.customer.last_name_kanji %>
				<%= order.customer.first_name_kanji %>
			</td>
			<td>
				<%= order.order_item.amount %>
			</td>
			<td>
				<%= select :status, order.status.keys.to_a, {class: 'form-control'} %>
			</td>
		</tr>
		<% end %>
		<%= paginate @orders %>
	</tbody>
</table>

<%= link_to "today", admin_orders_today_path %>