<div class="admin-page-title ">注文履歴詳細</div>
<div class="row">
<div class="col-xs-3">
	<p class="admin-order-show">購入者</p>
	<p class="admin-order-show">配送先</p>
	<P class="admin-order-show">支払方法</P>
	<P class="admin-order-show">注文ステータス</P>
</div>
<div class="col-xs-9">
	<div class="admin-order-show-data">
		<%= link_to public_customer_path(@order) do %>
		<%= @order.customer.last_name_kanji %>
		<%= @order.customer.first_name_kanji %>
		<% end %>
	</div>
	<div class="admin-order-show-data">
		<%= @order.customer.postal_code %>
		<%= @order.customer.address %>
	</div>
	<div class="admin-order-show-data">
		<%= @order.pay_method %>
	</div>
	<div class="admin-order-show-data">
		<%= form_for [:admin, @order] do |f| %>
		<%= f.select :status, Order.statuses.keys.to_a %>
		<%= f.submit '更新' , {class: 'btn btn-primary'} %>
		<% end %>
	</div>
</div>
</div>

<div class="row">
<div class="col-xs-9">
<table class="table table-hover table-inverse">
	<thead>
		<tr class="active">
			<th>商品名</th>
			<th>単価(税込)</th>
			<th>数量</th>
			<th>小計</th>
			<th>製作ステータス</th>
		</tr>
	</thead>
	<tbody>
		<%= @order_items.each do |order_item| %>
		<tr>
			<td>
				<%= order_item.name %>
			</td>
			<td>
				<%= order_item.price %>
			</td>
			<td>
				<%= order_item.amount %>
			</td>
			<td>
				<%= (order_item.price.to_i*order_item.amount.to_i).floor %>
			</td>
			<td>
				<%= form_for [:admin, @order] do |f| %>
				<%= f.collection_select :making_status, OrderItem.making_statuses.keys.to_a, {class: 'form-control'} %>
				<%= f.submit '更新' , {class: 'btn btn-primary fixed-right'} %>
				<% end %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>
<div class="col-xs-3 text-end">
	<div class="row">
	<div class="col-xs-6">
		<p>商品合計</p>
		<p>送料</p>
		<p>請求金額合計</p>
	</div>
	<div class="col-xs-6">
		<div>
			<%= @order.total_due %>円
		</div>
		<div style="margin-top: 8%">
			<%= @order.postage %>円
		</div>
		<div style="margin-top: 8%">
			<%= @order.total_due+@order.postage %>円
		</div>
	</div>
    </div>
</div>
</div>