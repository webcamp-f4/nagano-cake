<P>商品編集</p>
<%= form_for(@item) do |f| %>
<div>
    <div>
        <%= f.label :image %>
        <%= f.attachment_field :item_image, class: "item_image" %>
    </div>
</div>
<div>
    <div>
        <label>商品名</label>
        <%= f.text_field :name %>
    </div>
    <div>
        <label>商品説明</label>
        <%= f.text_area :introduction %>
    </div>
    <div>
        <label>ジャンル</label>
        <%=　select :genre.valid_status, item.genre.valid_status.keys.to_a, {class: 'form-control' %>
    </div>
    <div>
        <label>税抜価格</label>
        <%= f.number_field :price %>
    </div>
    <div>
        <label>販売ステータス</label>
        <%=　elect :sales_status, item.sales_status.keys.to_a, {class: 'form-control' %>
    </div>
</div>
<div>
    <%= f.submit %>
</div>
<% end %>