<div class="row">
<div class="col-xs-8 col-xs-offset-2">
<P class="admin-page-title ">商品一覧</P>
<div class="row text-right">
    <%= link_to "+", new_admin_item_path, class: "btn btn-lg rounded-circle shadow" %>
  </div>
<table class="table table-hover">
    <thead class="active">
        <tr class="active">
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
        </tr>
    </thead>

    <tbody>
        <% @items.each do |item| %>
        <tr>
            <td>
                <%= item.id %>
            </td>
            <td class="admin-item-name">
                <%= link_to item.name, admin_item_path(item) %>
            </td>
            <td>
                <%= item.price %>
            </td>
            <td>
                <%= item.genre.name %>
            </td>
            <td>
                <%= item.sales_status %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
</div>
</div>