<div class="row">
<p class="admin-page-title-item-new">商品新規登録</p>
<div class="row">
<%= form_for @item,:url => {:action => :create}, html:{class: 'form-horizontal'} do |f| %>
<div class="col-xs-4 col-xs-offset-1">
    <div class="form-group">
        <div class="item-image">
        <%= attachment_image_tag @item, :image, class: "img-square", fallback: "img/no_image.jpg", size:"300x200" %>
      　</div>
        <%= f.attachment_field :image %>
    </div>
</div>
<div class="col-xs-6">
    <div class="form-group">
        <label class="col-sm-2 ">商品名&emsp;</label>
        <div class="col-sm-10">
        <%= f.text_field :name,{class: 'item-text'} %>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 ">商品説明</label>
        <div class="col-sm-10">
        <%= f.text_area :introduction, {class: 'item-text item-introduction'} %>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 ">ジャンル</label>
        <div class="col-sm-10">
        <%= f.collection_select(:genre_id, Genre.all, :id, :name, promote: "選択してください") %>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 ">税抜価格</label>
        <div class="col-sm-10">
        <%= f.number_field :price,{class: 'item-text'} %>円
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2">販売&emsp;&emsp;&emsp;<br>ステータス</label>
        <div class="col-sm-10">
        <%= f.select :sales_status, Item.sales_statuses.keys.to_a %>
        </div>
    </div>
    <div class="text-right fixed-bottom">
    <%= f.submit '新規登録' , {class: 'btn btn-primary fixed-bottom'} %>
    </div>
</div>
<% end %>
</div>
</div>


<script type="text/javascript">
$(function(){
    // inputのidから情報の取得
    $('#item_image').on('change', function (e) {
// ここから既存の画像のurlの取得
    var reader = new FileReader();
    reader.onload = function (e) {
        console.log(e.target.result)
        $(".image").attr('src', e.target.result);
    }
// ここまで
    reader.readAsDataURL(e.target.files[0]); //取得したurlにアップロード画像のurlを挿入
});
});

</script>
