<p>ジャンル一覧・追加</p>
<div>
	<%= form_for [:admin, @genre] do |f| %>
	<div>
		<label>ジャンル</label>
		<%= f.text_field :name %>
	</div>
	<div>
		<%= f.select :valid_status, Genre.valid_statuses.keys.to_a, {class: 'form-control'} %>
	</div>
	<div>
		<%= f.submit %>
	</div>
	<% end %>
</div>
<div>
	<table>
		<thead>
			<tr>
				<th>ジャンル</th>
				<th>状態</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @genres.each do |genre| %>
			<tr>
				<td>
					<%= genre.name %>
				</td>
				<td>
					<%= genre.valid_status %>
				</td>
				<td>
					<%= link_to "編集する",edit_admin_genre_path(genre) %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>