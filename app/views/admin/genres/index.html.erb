<div class="row">
<div class="col-xs-8 col-xs-offset-2">
<p class="admin-page-title-genre">ジャンル一覧・追加</p>
<div class="genre-new row">
	<%= form_for(@genre, url: admin_genres_path) do |f| %>
	<div class="col-xs-2">
		<label>ジャンル</label>
	</div>
	<div class="col-xs-3">
		<%= f.text_field :name %>
	</div>
	<div class="col-xs-2">
			<%= f.radio_button :valid_status, :true %>
			<%= f.label :valid_status, "有効" %>
			<%= f.radio_button :valid_status, :false %>
			<%= f.label :valid_status, "無効" %>
	</div>
	<div class="col-xs-2">
		<%= f.submit '追加',{class: 'btn btn-info'} %>
	</div>
	<% end %>
</div>
<div class="row">
	<div class="col-xs-9">
	<table class="table table-hover">
		<thead>
			<tr class="active">
				<th>ジャンル</th>
				<th>状態</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @genres.each do |genre| %>
			<tr>
				<td>
					<%= genre.name %>
				</td>
				<td>
					<% if genre.valid_status == true %>
						有効
					<% else %>
						無効
					<% end %>
				</td>
				<td class="text-right">
					<%= link_to "編集する",edit_admin_genre_path(genre), {class: 'btn btn-primary'} %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
</div>
</div>
</div>