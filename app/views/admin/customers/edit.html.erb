<P>
  <%= customer.last_name_kanji %><%= customer.first_name_kanji %>さんの会員情報編集
</P>

<%= form_for edit_admin_customer_path@customer do |f| %>

<table>
    <tr>
      <th>名前</th>
      <td>（姓）</td>
      <td><%= f.text_field :last_name_kanji %></td>
      <td>(名)</td>
      <td><%= f.text_field :first_name_kanji %></td>
    </tr>
    <tr>
      <th>カナ</th>
      <td>(セイ）</td>
      <td><%= f.text_field :last_name_kana %></td>
      <td>(メイ)</td>
      <td><%= f.text_field :first_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td></td>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td></td>
      <td><%= f.text_area :address %></td>
    </tr>
    <tr>
      <th>電話番号(ハイフンなし)</th>
      <td></td>
      <td><%= f.number_field :tel %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td></td>
      <td><%= f.text_area :email %></td>
    </tr>
    <tr>
      <th>会員ステータス</th>
      <td></td>
      <td></td>
    </tr>
</table>
<span><%= f.submit '変更を保存する'%></span>
<% end %>
