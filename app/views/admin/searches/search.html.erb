<% if @select == "1" %>
<div class="row">
<div class="col-xs-8 col-xs-offset-2">
<p class="admin-page-title ">会員一覧</p>

	<table class="table table-hover">
		<thead>
			<tr class="active">
				<th>会員ID</th>
				<th>氏名</th>
				<th>メールアドレス</th>
				<th>ステータス</th>
			</tr>
		</thead>
		<tbody>
			<% @customers.each do |customer| %>
			<tr>
				<td>
					<%= customer.id %>
				</td>
				<td class="admin-item-name">
					<%= link_to admin_customer_path(customer) do %>
					<%= customer.last_name_kanji %><%= customer.first_name_kanji %>
					<% end %>
				</td>
				<td>
					<%= customer.email %>
				</td>
				<td>
					<%= customer.is_deleted %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>

</div>
</div>
<% elsif @select == "2" %>
<div class="row">
<div class="col-xs-8 col-xs-offset-2">
<P class="admin-page-title ">商品一覧</P>

<table class="table table-hover">
    <thead class="active">
        <tr class="active">
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
        </tr>
    </thead>

    <tbody>
        <% @items.each do |item| %>
        <tr>
            <td>
                <%= item.id %>
            </td>
            <td class="admin-item-name">
                <%= link_to item.name, admin_item_path(item) %>
            </td>
            <td>
                <%= item.price %>
            </td>
            <td>
                <%= item.genre.name %>
            </td>
            <td>
                <%= item.sales_status %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
</div>
</div>
<% else %>
<span class="admin-page-title ">注文履歴一覧</span>
<table class="table table-hover table-inverse admin-order-index">
	<thead class="active">
		<tr class="active">
			<th>購入日時</th>
			<th>購入者</th>
			<th>注文個数</th>
			<th>注文ステータス</th>
		</tr>
	</thead>
	<tbody>
		<% @orders.each do |order| %>
		<tr>
			<td>
				<%= link_to admin_order_path(order) do %>
				<%= order.created_at.strftime("%Y-%m-%d %H:%M") %>
				<% end %>
			</td>
			<td>
				<%= order.customer.last_name_kanji %>
				<%= order.customer.first_name_kanji %>
			</td>
			<td>
				<%= order.order_items.sum(:amount) %>
			</td>
			<td>
				<%= order.status %>
			</td>
		</tr>
		<% end %>
		<%= paginate @orders %>
	</tbody>
</table>
<% end %>